      return data.map((d) => ({
        name: d.dealerName || d.businessName || d.dealerName || "Unknown",
        total: parseFloat(d.totalSales || 0),
      }));
    }
    // if backend returns object with productGroups etc
    return (data.dealers || []).map((d) => ({
      name: d.dealerName || d.businessName || "Unknown",
      total: parseFloat(d.totalSales || 0),
