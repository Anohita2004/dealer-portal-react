              </Grid>
              <Grid item xs={12} md={4}>
                <DashboardCard title="Total Sales" value={`‚Çπ${(Array.isArray(data) ? data.reduce((s, d) => s + (d.totalSales || 0), 0) : data.totalSales) || 0}`} />
              </Grid>
              <Grid item xs={12} md={4}>
                <DashboardCard title="Pending Orders" value={`${data.pendingOrders || 0}`} />
