                      {(data || []).map((p) => (
                        <tr key={p.id} style={{ borderBottom: "1px solid #1f2937" }}>
                          <td style={{ padding: 8 }}>{p.id}</td>
                          <td>{p.dealerName}</td>
                          <td>{p.documentType}</td>
                          <td>{new Date(p.createdAt).toLocaleString()}</td>
                          <td>{p.status}</td>
